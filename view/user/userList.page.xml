<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd">

   <begin-conversation join="true"/>
   <action execute="#{userList.refresh()}" />

   <!--  search params -->
   <param name="name" value="#{userList.name}"/>
   <param name="email" value="#{userList.email}"/>
   <!--  stores the first result of the query in a page parameter to allow for pagination -->        
   <param name="firstResult" value="#{userList.firstResult}" />
   <param name="sort" value="#{userList.orderColumns}"/>
   <param name="dir" value="#{userList.orderDirection}"/>
   <param name="prevSort" value="#{userList.prevSanitizedOrderByParamsStr}"/>
</page>

