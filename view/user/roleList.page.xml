<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      login-required="true" >
      
   <restrict>#{s:hasRole('admin')}</restrict>

   <begin-conversation join="true"/>
   <action execute="#{roleList.refresh()}" />

   <!--  search params -->
   <param name="name" value="#{roleList.name}"/>
   <!--  stores the first result of the query in a page parameter to allow for pagination -->        
   <param name="firstResult" value="#{roleList.firstResult}" />
   <param name="sort" value="#{roleList.orderColumns}"/>
   <param name="dir" value="#{roleList.orderDirection}"/>
   <param name="prevSort" value="#{roleList.prevSanitizedOrderByParamsStr}"/>
</page>
